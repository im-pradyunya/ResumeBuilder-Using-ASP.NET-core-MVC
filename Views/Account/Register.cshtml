@model register.Models.ViewModel.RegisterViewModel
@{
    ViewBag.Title = "User Registration";
}
<h1 style="margin-left:100px;margin:20px;">Registration</h1>


<div class="container py-5">
    <form method="post">

        <div asp-validation-summary="All" class="text-danger"> </div>
        <div class="mb-3">
            <label class="form-label">Name</label>
            <input type="text" class="form-control" id="name" asp-for="Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Email ID</label>
            <input type="text" class="form-control" id="Email" asp-for="Email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Password</label>
            <input type="password" class="form-control" id="displayName" asp-for="Password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Confirm Password</label>
            <input type="password" class="form-control" id="displayName" asp-for="ConfirmPassword" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <button type="submit" class="btn btn-dark" asp-area="" >Register</button>
        </div>

    </form>
</div>
